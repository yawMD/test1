        <script>
            $(document).ready(function () {
                $(function () {
                    $('[data-toggle="tooltip"]').tooltip()
                })
                let acceptCookies = getCookie("acceptCookies");
                const isLoggedIn = getCookie('data') || getCookie('admin-data');

                if (isLoggedIn) {
                    const accountsUrl = getAccountsUrl();
                    window.location.replace(accountsUrl);
                }

                if (acceptCookies != "") {
                    $('#cookies-notification').css({
                        display: 'none'
                    });
                } else {
                    $('#cookies-notification').css({
                        display: 'block'
                    });
                }
            })

            function setCookie(cookieName, cookieValue, expiringDate) {
                let date = new Date();
                date.setTime(date.getTime() + (expiringDate * 24 * 60 * 60 * 1000));
                let expires = "expires=" + date.toUTCString();
                document.cookie = cookieName + "=" + cookieValue + ";" + expires + ";path=/";
                document.getElementById("cookies-notification").style.display = "none";
            }

            function getCookie(cookieName) {
                let name = cookieName + "=";
                let ca = document.cookie.split(';');
                for (let i = 0; i < ca.length; i++) {
                    let c = ca[i];
                    while (c.charAt(0) == ' ') {
                        c = c.substring(1);
                    }
                    if (c.indexOf(name) == 0) {
                        return c.substring(name.length, c.length);
                    }
                }
                return "";
            }

            function getAccountsUrl() {
                let accountsUrl = window.location.origin + '/accounts';
                if (
                    window &&
                    window.location &&
                    window.location.host &&
                    (window.location.host.includes('localhost:') ||
                        window.location.host.includes('0.0.0.0:') ||
                        window.location.host.includes('127.0.0.1:'))
                ) {
                    accountsUrl = window.location.protocol + '//localhost:3003/accounts';
                }
                return accountsUrl;
            }
        </script>


