{
    "preset": "ts-jest",
    "verbose": true,
    "globals": {
        "ts-jest": {
            "tsconfig": "tsconfig.json",
            "babelConfig": false
        }
    },
    "moduleFileExtensions": ["ts", "js", "json"],
    "transform": {
        ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageReporters": ["text", "html"],
    "testRegex": "./Tests/(.*).test.ts",
    "collectCoverageFrom": ["./**/*.(tsx||ts)"],
    "coverageThreshold": {
        "global": {
            "lines": 0,
            "functions": 0,
            "branches": 0,
            "statements": 0
        }
    }
}
